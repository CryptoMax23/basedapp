{
  "compilerOptions": {
    "target": "esnext", // Target the latest ECMAScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Include necessary libraries for DOM and ESNext
    "allowJs": true, // Allow TypeScript to compile JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files to speed up compilation
    "strict": true, // Enable all strict type-checking options for better type safety
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing of filenames
    "esModuleInterop": true, // Simplify interoperability between CommonJS and ES modules
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "isolatedModules": true, // Treat each file as a separate module for better debugging
    "jsx": "preserve", // Preserve JSX for further transformation by Babel/Next.js
    "incremental": true, // Enable incremental compilation for faster builds
    "noEmit": true, // Do not emit compiled JavaScript files, handled by Next.js/Babel
    "module": "esnext" // Output ECMAScript modules
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Include Next.js environment types
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include TypeScript JSX files
    ".next/types/**/*.ts" // Include TypeScript types generated by Next.js
  ],
  "exclude": [
    "node_modules" // Exclude node_modules to avoid compiling external libraries
  ]
}
